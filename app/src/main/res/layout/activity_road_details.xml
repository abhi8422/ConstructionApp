<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".RoadDetails"
android:padding="20dp">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
            <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_text_input"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    app:errorEnabled="true">
                <android.support.design.widget.TextInputEditText
                        android:id="@+id/editText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Labour Contractor Name"
                        android:drawableLeft="@drawable/ic_action_person"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/number_oflabours_input"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    app:errorEnabled="true">
                <android.support.design.widget.TextInputEditText
                        android:id="@+id/editText2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Number Of Labours"
                        android:drawableLeft="@drawable/ic_action_person"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/labours_Expenses_input"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    app:errorEnabled="true">
                <android.support.design.widget.TextInputEditText
                        android:id="@+id/editText3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Labour Expenses"
                        android:drawableLeft="@drawable/ic_action_currency"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/Workdone_input"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    app:errorEnabled="true">
                <android.support.design.widget.TextInputEditText
                        android:id="@+id/editText4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Work Done By Labour"
                        android:drawableLeft="@drawable/ic_action_workdone"/>
            </android.support.design.widget.TextInputLayout>


            <GridLayout
                    android:layout_width="448dp"
                    android:layout_height="43dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/Text1"
                        style="@style/TextStyle"
                        android:layout_width="142dp"
                        android:layout_height="74dp"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:text="Materials" />

                <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="310dp"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:layout_row="0"
                        android:gravity="right" />
            </GridLayout>


            <android.support.design.widget.TextInputLayout
                    android:id="@+id/Quantity_input"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    app:errorEnabled="true">
                <android.support.design.widget.TextInputEditText
                        android:id="@+id/editText5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Material Quantity"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                    android:id="@+id/VehicalNumber_input"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    app:errorEnabled="true">
                <android.support.design.widget.TextInputEditText
                        android:id="@+id/editText6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Vehicle Number "
                        android:drawableLeft="@drawable/ic_action_vehical"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                    android:id="@+id/DriverName_input"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    app:errorEnabled="true">
                <android.support.design.widget.TextInputEditText
                        android:id="@+id/editText7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Driver Name"
                        android:drawableLeft="@drawable/ic_action_person"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/SupplierName_input"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    app:errorEnabled="true">
                <android.support.design.widget.TextInputEditText
                        android:id="@+id/editText8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:hint="Supplier Name "
                        android:drawableLeft="@drawable/ic_action_person"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                    android:id="@+id/Rate_input"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/colorPrimaryDark"
                    app:boxStrokeColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    app:errorEnabled="true">
                <android.support.design.widget.TextInputEditText
                        android:id="@+id/editText9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Rate"
                        android:drawableLeft="@drawable/ic_action_currency"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                    android:id="@+id/nButton"
                    android:layout_width="278dp"
                    android:layout_height="60dp"
                    android:background="@drawable/buttonshape"
                    android:layout_gravity="center"
                    android:text="Submit"
                    android:textColor="#F4FFF8"
                    android:textSize="32sp" />


        </LinearLayout>

    </ScrollView>



</LinearLayout>